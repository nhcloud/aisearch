@{
    ViewData["Title"] = "AI Search - Multimodal Solution";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="search-tab" data-bs-toggle="tab" data-bs-target="#search" type="button" role="tab">
                    <i class="material-icons me-2" style="vertical-align: middle; font-size: 18px;">search</i>
                    Search
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="chat-tab" data-bs-toggle="tab" data-bs-target="#chat" type="button" role="tab">
                    <i class="material-icons me-2" style="vertical-align: middle; font-size: 18px;">chat</i>
                    Chat
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="documents-tab" data-bs-toggle="tab" data-bs-target="#documents" type="button" role="tab">
                    <i class="material-icons me-2" style="vertical-align: middle; font-size: 18px;">description</i>
                    Documents
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="indexes-tab" data-bs-toggle="tab" data-bs-target="#indexes" type="button" role="tab">
                    <i class="material-icons me-2" style="vertical-align: middle; font-size: 18px;">storage</i>
                    Index Management
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="search" role="tabpanel">
                @await Html.PartialAsync("_SearchPartial")
            </div>
            <div class="tab-pane fade" id="chat" role="tabpanel">
                @await Html.PartialAsync("_ChatPartial")
            </div>
            <div class="tab-pane fade" id="documents" role="tabpanel">
                @await Html.PartialAsync("_DocumentsPartial")
            </div>
            <div class="tab-pane fade" id="indexes" role="tabpanel">
                @await Html.PartialAsync("_IndexManagementPartial")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/app.js"></script>
}