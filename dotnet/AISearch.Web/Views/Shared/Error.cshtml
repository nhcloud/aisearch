@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="display-4 text-danger">Error</h1>
    <p class="fs-3">
        <span class="text-danger">Oops!</span> Something went wrong.
    </p>
    <p>An error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="material-icons me-2" style="vertical-align: middle; font-size: 18px;">home</i>
            Go Home
        </a>
    </div>
</div>